<div class='container'>

    <div>
        <h2>Create Workout</h2>
        <form>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Title</label>
                <textarea class="form-control" id="workout-title" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="workout-description" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Rating</label>
                <textarea class="form-control" id="workout-rating" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Workout Type</label>
                <textarea class="form-control" id="workout-type" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Body Zone</label>
                <textarea class="form-control" id="body-zone" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Duration</label>
                <textarea class="form-control" id="workout-duration" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Owner ID</label>
                <textarea class="form-control" id="owner-id" rows="3"></textarea>
            </div>

        </form>
    </div>

    <div>
        <button type="button" class="btn btn-light" id="submit-button">Submit</button>
    </div>



</div>

<script src="/js/createworkout.js"> </script>